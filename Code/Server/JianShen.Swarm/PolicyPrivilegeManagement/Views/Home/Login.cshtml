
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>用户登录</title>

    <environment include="Development">
         <link rel="stylesheet"  href="~/css/site.css"/>
         <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    </environment>

    <environment exclude="Development">
        <link rel="stylesheet" href="~/css/site.min.css" />
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    </environment>
</head>
<body>
    <form action="/Login" method="post">
        <div class="row">
            <div class="col-md-5"></div>
            <div class="col-md-2">
                <div class="panel panel-default" style="padding:30px;">
                    <div class="panel-body">
                        <div class="row" style="margin-top:20px;margin-bottom:50px;">
                            <img src="~/images/user.jpg" width="60%" class="img-circle" style="display:block;margin:0 auto;">
                        </div>
                        <div class="row">
                            <div class="input-group">
                                <span class="input-group-addon" id="basic-addon1">用户名</span>
                                <input type="text" name="username" class="form-control" placeholder="请输入用户名" aria-describedby="basic-addon1">
                            </div>

                        </div>
                        <div class="row">

                            <div class="input-group">
                                <span class="input-group-addon" id="basic-addon1">密　码</span>
                                <input type="password" name="password" class="form-control" placeholder="请输入密码" aria-describedby="basic-addon1">
                            </div>

                        </div>
                        <div class="row">

                            <input class="btn btn-default"  value="登录" type="submit" style="float:right;width:80px;" />

                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-5"></div>
        </div>
        <input type="hidden" name="returnUrl" value="@TempData["returnUrl"]?.ToString()" />
    </form>

    <environment include="Development">
        <script src="~/js/site.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
    </environment>

    <environment exclude="Development">
        <script src="~/js/site.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    </environment>
</body>
</html>
